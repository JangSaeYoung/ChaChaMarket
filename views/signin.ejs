  </header>
  <div class="boot">
    <!-- <div class="row">
      <div class="col-8 col-md-4 col-lg-10 bg-primary">1set column</div>
      <div class="col-4 col-md-8 col-lg-2 bg-warning">2nd column</div>
    </div> -->
    <div class="container-lg d-flex flex-column align-items-center bg-light w-75 p-5 rounded-3">
      <h2>회원가입</h2>
      <form action="/signin" method="post" class="w-75">
        <div class="mt-3 id">
          <label class="mb-3" for="input-id">아이디</label>
          <input type="text" name="id" class="form-control" placeholder="아이디를 입력하세요." required />
        </div>
        <div class="mt-3 email">
          <label class="mb-3" for="input-email">이메일</label>
          <input type="text" name="email" class="form-control" placeholder="이메일 입력하세요." required />
        </div>
        <div class="mt-3 password">
          <label class="mb-3" for="input-pw">패스워드</label>
          <input type="password" name="password" class="form-control" placeholder="비밀번호를 입력하세요." required />
        </div>
        <div class="d-flex justify-content-center mt-4">
          <button type="submit" class="btn btn-outline-success">회원가입</button>
        </div>
      </form>
    </div>
  </div>
</body>

