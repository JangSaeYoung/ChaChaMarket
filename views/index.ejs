    <!-- <div class="artistList"> -->
    <div class="artistList">
      <% if(userCounts > 0) {%> <% for(let i= 0; i < userCounts; i++){ %>
      <div class="artist">
        <div class="inner">
          <img src="./images/<%= imgName%>" alt="dabal image">
          <div class="artistWork">
            <p>교재명: <%= USER[i].name%></p>
            <p>작가명: <%= USER[i].id%></p>
            <p>이메일: <%= USER[i].email%></p>
          </div>
          <p class="plusBtn">더보기</p>
        </div>
      </div>
      <%}%>
        <%}%>
